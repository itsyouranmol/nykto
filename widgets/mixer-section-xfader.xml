<!DOCTYPE template>
<!--
  Description:
    A mixer x-fader section.
-->
<Template>
  <WidgetGroup>
    <ObjectName>XFader</ObjectName>
    <Layout>stacked</Layout>
    <Size>me,56f</Size>
    <Children>
      <SliderComposed>
        <Handle>widgets/slider/slider-handle-horizontal.svg</Handle>
        <Slider></Slider>
        <SizePolicy>f,f</SizePolicy>
        <MinimumSize>52,52</MinimumSize>
        <MaximumSize>-1,52</MaximumSize>
        <Horizontal>true</Horizontal>
        <Connection>
          <ConfigKey>[Master],crossfader</ConfigKey>
        </Connection>
      </SliderComposed>
      <WidgetGroup>
        <Layout>horizontal</Layout>
        <ObjectName>XFaderMeterContainer</ObjectName>
        <Children>
          <WidgetGroup>
            <Layout>stacked</Layout>
            <Size>me,2f</Size>
            <ObjectName>XFaderMeterBG</ObjectName>
            <Children>
              <VuMeter>
                  <PathVu scalemode="STRETCH">widgets/slider/slider-vu-fill-horizontal-righthalf.svg</PathVu>
                  <SizePolicy>me,min</SizePolicy>
                  <MinimumSize>30,2</MinimumSize>
                  <MaximumSize>-1,2</MaximumSize>
                  <Horizontal>true</Horizontal>
                  <PeakHoldSize>0</PeakHoldSize>
                  <PeakHoldTime>200</PeakHoldTime>
                  <PeakFallTime>20</PeakFallTime>
                  <PeakFallStep>1</PeakFallStep>
                  <Connection>
                      <ConfigKey>[Master],crossfader</ConfigKey>
                  </Connection>
              </VuMeter>
            </Children>
          </WidgetGroup>
        </Children>
      </WidgetGroup>
      <WidgetGroup>
        <Layout>horizontal</Layout>
        <Children>
          <WidgetGroup>
            <ObjectName>XFaderRangeStroke</ObjectName>
            <Size>17f,52f</Size>
            <Children></Children>
          </WidgetGroup>
          <WidgetGroup>
            <ObjectName>ExpanderVertical</ObjectName>
            <Size>me,1f</Size>
            <Children></Children>
          </WidgetGroup>
          <WidgetGroup>
            <ObjectName>XFaderRangeStroke</ObjectName>
            <Size>17f,52f</Size>
            <Children></Children>
          </WidgetGroup>
          <WidgetGroup>
            <ObjectName>ExpanderVertical</ObjectName>
            <Size>me,1f</Size>
            <Children></Children>
          </WidgetGroup>
          <WidgetGroup>
            <ObjectName>XFaderRangeStroke</ObjectName>
            <Size>17f,52f</Size>
            <Children></Children>
          </WidgetGroup>
        </Children>
      </WidgetGroup>
    </Children>
  </WidgetGroup>
</Template>

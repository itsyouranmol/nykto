<!DOCTYPE template>
<!--
  Description:
    A knob with label-button.
  Variables:
    group: The group to connect to.
    control: The control rotary connect to.
    label: Label text.
    button_control: The control button with label connect to.
-->
<Template>
  <WidgetGroup>
    <Layout></Layout>
    <Size>40f,52f</Size>
    <Children>
      <WidgetGroup>
        <ObjectName>KnobBackgroundBig</ObjectName>
        <Layout></Layout>
        <Pos>0,2</Pos>
        <Size>40f,48f</Size>
        <Children>
          <KnobComposed>
            <Size>40f,40f</Size>
            <Pos>0,0</Pos>
            <Knob>widgets/knob/big/stroke.svg</Knob>
            <BackPath></BackPath>
            <MinAngle>-135</MinAngle>
            <MaxAngle>135</MaxAngle>
            <Connection>
              <ConfigKey>[<Variable name="group"/>],<Variable name="control"/></ConfigKey>
            </Connection>
          </KnobComposed>
          <Knob>
            <NumberStates>91</NumberStates>
            <Path>widgets/knob/big/arc-yellow/arc_%1.svg</Path>
            <Pos>0,0</Pos>
            <Connection>
              <ConfigKey>[<Variable name="group"/>],<Variable name="control"/></ConfigKey>
            </Connection>
          </Knob>
          <PushButton>
            <ObjectName>UnderknobButtonYellow</ObjectName>
            <Size>40f,15f</Size>
            <Pos>0,36</Pos>
            <NumberStates>2</NumberStates>
            <RightClickIsPushButton>true</RightClickIsPushButton>
            <State>
              <Number>0</Number>
              <Text><Variable name="label"/></Text>
              <Pressed scalemode="STRETCH_ASPECT"></Pressed>
              <Unpressed scalemode="STRETCH_ASPECT"></Unpressed>
            </State>
            <State>
              <Number>1</Number>
              <Text><Variable name="label"/></Text>
              <Pressed scalemode="STRETCH_ASPECT"></Pressed>
              <Unpressed scalemode="STRETCH_ASPECT"></Unpressed>
            </State>
            <Connection>
              <ConfigKey>[<Variable name="button_group"/>],<Variable name="button_control"/></ConfigKey>
              <EmitOnPressAndRelease>true</EmitOnPressAndRelease>
              <ButtonState>LeftButton</ButtonState>
            </Connection>
          </PushButton>
        </Children>
      </WidgetGroup>
    </Children>
  </WidgetGroup>
</Template>
